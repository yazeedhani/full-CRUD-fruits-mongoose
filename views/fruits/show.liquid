{% layout 'layout.liquid' %}
{% block content %}
    <div>
        <article>
            <h2>
                {{ fruit.name }}
                {% if fruit.readyToEat %}
                    Ready to Eat
                {% else %}
                    Not Ready to Eat
                {% endif %}
            </h2>
            <h3>{{ fruit.color }}</h3>
            <a href="/fruits/{{fruit.id}}/edit"><button>Edit</button></a>
            <form action="/fruits/{{ fruit._id }}?_method=DELETE" method="POST">
                <input type="submit" value="DELETE THAT FRUIT">
            </form>
        </article>
    </div>
{% endblock %}