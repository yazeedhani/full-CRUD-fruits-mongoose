{% layout 'layout.liquid' %}
{% block content %}
    <div class="container-md">
        <article>
            <h2>
                {{ fruit.name }}
                {% if fruit.readyToEat %}
                    Ready to Eat
                {% else %}
                    Not Ready to Eat
                {% endif %}
            </h2>
            <h3>{{ fruit.color }}</h3>
            <div class="btn-group">
                <a href="/fruits/{{fruit.id}}/edit"><button class="btn btn-primary">Edit</button></a>
                <form action="/fruits/{{ fruit._id }}?_method=DELETE" method="POST">
                    <input type="submit" value="DELETE THAT FRUIT" class="btn btn-danger">
                </form>
            </div>
        </article>
    </div>
{% endblock %}