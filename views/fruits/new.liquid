{% layout 'layout.liquid' %}
{% block content %}
    <div class="container-sm">
        <form action="/fruits" method="POST">
            <fieldset>
                <legend>Create New Fruit</legend>
                <label class="form-label">Name: </label>
                <input type="text" name="name" placeholder="Enter Fruit Name" class="form-control">
                <label class="form-label">Color: </label>
                <input type="text" name="color" placeholder="Enter Fruit Color" class="form-control">
                <label class="form-label">Ready To Eat:</label>
                <input type="checkbox" name="readyToEat" class="form-check-input">   
            </fieldset>
            <input type="submit" value="Create New Fruit">
        </form>
    </div>
{% endblock %}